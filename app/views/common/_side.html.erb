  <aside class="">
    <!--User info-->
    <div>
      <h2>User info</h2>
      <p>
        <%= image_tag user.get_profile_image(100, 100) %>
      </p>
      <table>
        <tr>
          <th>name</th>
          <td><%= user.name %></td>
        </tr>
        <tr>
          <th>introduction</th>
          <td><%= user.introduction %></td>
        </tr>
      </table>
      <%= link_to edit_user_path(user.id) do %>
        <i class="fa-solid fa-user-gear"></i>
      <% end %>
    </div>

    <!--New book-->
    <div>
      <h2>New book</h2>
      <%= form_with(model: book) do |f| %>
        <div class="">
          <p>Title</p>
          <%= f.text_field :title %>
        </div>

        <div class="">
          <p>Opinion</p>
          <%= f.text_area :body %>
        </div>

        <%= f.submit "Create Book" %>
      <% end %>
    </div>
  </aside>