<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 mx-auto">
      <h1>Editing Book</h1>

      <!--エラーメッセージ-->
      <%= render 'common/error', model: @book %>

      <%= form_with(model: @book, url: book_path(@book.id), method: :patch) do |f| %>
        <div>
          <%= f.label :title %><br>
          <%= f.text_field :title, class: "form-control" %>
        </div>

        <div class="mt-3">
          <%= f.label :body %><br>
          <%= f.text_area :body, class: "form-control" %>
        </div>

        <%= f.submit "Update Book", class: "mt-3 btn btn-success" %>
      <% end %>

      <p class="links mt-3">
        <%= link_to "Show", book_path(@book.id) %>
        |
        <%= link_to "Back", books_path %>
      </p>
    </div>
  </div>
</div>