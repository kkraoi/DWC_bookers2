<h1>Editing Book</h1>

<!--エラーメッセージ-->
<%= render 'common/error', model: @book %>

<%= form_with(model: @book, url: book_path(@book.id), method: :patch) do |f| %>
  <div>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </div>

  <%= f.submit "Update Book" %>
<% end %>

<p class="links">
  <%= link_to "Show", book_path(@book.id) %>
  |
  <%= link_to "Back", books_path %>
</p>