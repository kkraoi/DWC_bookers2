<!--エラーメッセージ-->
<% if @book.errors.any? %>
  <div class="" role="alert">
    <h3>
      <%= @book.errors.count %> errors prohibited this obj from being saved:
    </h3>
    <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<div class="">
  <!--左面-->
  <aside class="">
    <!--User info-->
    <div>
      <h2>User info</h2>
      <p>
        <%= image_tag @user.get_profile_image(100, 100) %>
      </p>
      <table>
        <tr>
          <th>name</th>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <th>introduction</th>
          <td><%= @user.introduction %></td>
        </tr>
      </table>
      <%= link_to "/path" do %>
        <i class="fa-solid fa-user-gear"></i><%# TODO %>
      <% end %>
    </div>

    <!--New book-->
    <div>
      <h2>New book</h2>
      <%= form_with(model: @book) do |f| %>
        <div class="">
          <p>Title</p>
          <%= f.text_field :title %>
        </div>

        <div class="">
          <p>Opinion</p>
          <%= f.text_area :body %>
        </div>

        <%= f.submit "Create Book" %>
      <% end %>
    </div>
  </aside>

  <!--右面-->
  <div>
    <h2>Books</h2>
    <table>
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
          <tr>
            <td>
              <%= image_tag book.user.get_profile_image(100, 100) %>
            </td>
            <td>
              <%= link_to book_path(book.id) do %>
                <%= book.title %>
              <% end %>
            </td>
            <td>
              <%= book.body %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>