<!--エラーメッセージ-->
<%= render 'common/error', model: @book %>

<div>
  <!--左面-->
  <%= render 'common/side', user: @user, book: @book %>

  <!--右面-->
  <h1>Users</h1>
  <table>
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td>
            <%= image_tag user.get_profile_image(100, 100) %>
          </td>
          <td>
            <%= user.name %>
          </td>
          <td>
            <%= link_to "Show", user_path(user.id) %>
            
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>